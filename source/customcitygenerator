#!/usr/bin/perl -wT

use strict;
use CGI;
use Data::Dumper;
use JSON;
use List::Util 'shuffle', 'min', 'max' ;
use POSIX;
use Template;
use XML::Simple;
use lib "lib/";
our $q = CGI->new;


print $q->header( 'text/html; charset=utf-8' );

    my $templates = Template->new({
        INCLUDE_PATH => 'Templates/',
        INTERPOLATE  => 1,
    }) || die "$Template::ERROR\n";

    my $vars = {
        'doctitle'         => "Custom City Generator",
        'title'         => "Let's Customize a City!",
        'content'       => print_content(),
    };
    $templates->process('base.tmpl', $vars) || die $templates->error(), "\n";

sub print_content {

    my $templates = Template->new({
        INCLUDE_PATH => 'Templates/',
        INTERPOLATE  => 1,
    }) || die "$Template::ERROR\n";

    my $vars;
    my $formtmpl;
    $templates->process('customcity_form.tmpl', $vars, \$formtmpl) || die $templates->error(), "\n";

    return $formtmpl;
}

__END__


